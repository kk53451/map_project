<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 제목 (새로운 맛집 리스트 생성) - 가운데 정렬 -->
    <TextView
        android:id="@+id/listTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 맛집 리스트 생성"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- 맛집 리스트 제목 입력 -->
    <EditText
        android:id="@+id/editListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="맛집 리스트 제목"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

    <!-- 입력창과 추가 버튼을 하나로 묶은 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 가게 이름, 주소, 영업시간, 휴일을 한 줄로 배치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="20dp">

            <!-- 가게 이름 -->
            <EditText
                android:id="@+id/editStoreName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="가게 이름"
                android:layout_marginEnd="8dp"/>

            <!-- 주소 -->
            <EditText
                android:id="@+id/editAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="주소"
                android:layout_marginEnd="8dp"/>

            <!-- 영업시간 -->
            <EditText
                android:id="@+id/editBusinessHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="영업 시간"
                android:layout_marginEnd="8dp"/>

            <!-- 휴일 -->
            <EditText
                android:id="@+id/editHoliday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="휴일"/>
        </LinearLayout>

        <!-- 기타 입력 사항 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/editOtherDetails"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:hint="기타 입력 사항"
                android:layout_marginEnd="8dp"/>

            <!-- 추가 버튼 (오른쪽 구석에 배치) -->
            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 지도 (MapView) - 세로 크기 반으로 줄임 -->
    <com.naver.maps.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"/>

    <!-- 스크롤 가능한 영역 (리스트뷰만 포함) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 리스트뷰 (가게 이름, 주소, 영업시간, 휴일, 삭제버튼) -->
            <ListView
                android:id="@+id/storeListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- 저장과 삭제 버튼 (우측 하단에 고정) -->
    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_gravity="right">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"/>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>
